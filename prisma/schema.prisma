generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model FabricType {
  id      Int           @id @default(autoincrement())
  name    String
  entries FabricEntry[]
}

model Color {
  id      Int           @id @default(autoincrement())
  name    String
  entries FabricEntry[]
}

model CuttingTable {
  id    Int          @id @default(autoincrement())
  name  String
  exits FabricExit[]
}

model FabricEntry {
  id           Int          @id @default(autoincrement())
  fabricTypeId Int
  colorId      Int
  weightKg     Float?
  lengthMeter  Float?
  entryDate    DateTime     @default(now())
  fabricType   FabricType   @relation(fields: [fabricTypeId], references: [id])
  color        Color        @relation(fields: [colorId], references: [id])
  exits        FabricExit[]
}

model FabricExit {
  id             Int          @id @default(autoincrement())
  fabricEntryId  Int
  cuttingTableId Int
  weightKg       Float?
  meter          Float?
  exitDate       DateTime     @default(now())
  fabricEntry    FabricEntry  @relation(fields: [fabricEntryId], references: [id])
  cuttingTable   CuttingTable @relation(fields: [cuttingTableId], references: [id])
}

model AdminUser {
  id        Int      @id @default(autoincrement())
  username  String   @unique
  password  String
  createdAt DateTime @default(now())
}
