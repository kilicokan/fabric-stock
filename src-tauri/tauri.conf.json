{
  "$schema": "../node_modules/@tauri-apps/cli/config.schema.json",
  "productName": "Miraapp",
  "version": "0.1.0",
  "identifier": "com.mira.fabricstock",
  "build": {
    "frontendDist": "../.next",
    "devUrl": "http://localhost:3000",
    "beforeDevCommand": "next dev --turbopack",
    "beforeBuildCommand": "next build"
  },
  "app": {
    "windows": [
      {
        "title": "Mira Fabric Stock",
        "width": 1200,
        "height": 800,
        "resizable": true,
        "fullscreen": false
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ]
  }
}
